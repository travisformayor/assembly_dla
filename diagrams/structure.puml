@startuml Structure

title "DLA Program Structure"

together {
  package "Main Module" {
    [main_loop]
    [main]
  }
  
  package "Particle Module" {
    [init_particles]
    [random_wiggle]
  }
  
  package "Helpers Module" {
    '[console_log]
    [random_num]
  }
}

package "UI Module" {
  [refresh_display]
  [show_particle]
}

' Main Connections
main --> init_particles : initialize all\n particles
main_loop --> random_wiggle : update all\n particles
main_loop --> refresh_display : update display\n once per loop

' Particle Connections
init_particles --> random_num : " get random number\n  to set/update position"
random_wiggle --> random_num

' UI Connections
refresh_display --> show_particle : draw each\n particle on\n the screen

@enduml
